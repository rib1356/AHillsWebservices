@model IEnumerable<ImportModel.PlantGroup>

@{
    ViewBag.Title = "Groups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() > 0)
{
<h2>Groups for @Model.First().PlantName.Name </h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Group.Description)
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Group.Description)
        </td>
    </tr>
}

</table>
}
else
{
<h2>No Group Allocated</h2>
}
